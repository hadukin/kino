<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/home_screen">

    <fragment
        android:id="@+id/home_screen"
        android:name="com.example.kino.views.home.HomeFragment"
        android:label="@string/nav_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_title_to_about"
            app:destination="@id/detail_screen" />
    </fragment>
    <fragment
        android:id="@+id/detail_screen"
        android:name="com.example.kino.views.home.details.ContentDetailFragment"
        tools:layout="@layout/fragment_content_detail">
        <argument
            android:name="myArg"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="Content" />
    </fragment>

</navigation>